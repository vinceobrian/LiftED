# PRODUCTION ENVIRONMENT TEMPLATE
# Copy this file to .env.production and fill in actual values from your services

# Server Configuration
NODE_ENV=production
PORT=10000
CLIENT_URL=https://your-lifted-frontend.vercel.app

# Database - Use MongoDB Atlas for production
# Sign up at https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net/lifted?retryWrites=true&w=majority
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/lifted

# JWT Secret - Generate a strong secret key
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-now

JWT_EXPIRE=7d

# Email Configuration - Use Gmail, SendGrid, or your email provider
# For Gmail: Enable 2FA and generate app password
# For SendGrid: Get API key from dashboard
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@lifted.ke

# Payment Integration - Stripe
# Get keys from https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_your_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Payment Integration - M-Pesa (Daraja API)
# Get credentials from https://developer.safaricom.co.ke
MPESA_CONSUMER_KEY=your_consumer_key
MPESA_CONSUMER_SECRET=your_consumer_secret
MPESA_PASSKEY=your_passkey
MPESA_SHORTCODE=174379
MPESA_CALLBACK_URL=https://your-backend-domain.onrender.com/api/payments/mpesa/callback

# File Upload - Cloudinary
# Sign up at https://cloudinary.com and get credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Security - Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Admin Credentials
# Change these immediately after first login
ADMIN_EMAIL=admin@lifted.ke
ADMIN_PASSWORD=change-this-strong-password-now
